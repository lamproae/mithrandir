#!/bin/bash
# rebuild-gcj-db

## Copyright (C) 2000, 2002, 2003, 2008 Free Software Foundation
##
##   This file is part of libgcj.
##
## This software is copyrighted work licensed under the terms of the
## Libgcj License.  Please consult the file "LIBGCJ_LICENSE" for
## details.

# Rebuild all the standard databases.
for i in `/home/mipsel/x-tools/x86_64-unknown-linux-gnu/bin/gcc --print-multi-lib 2>/dev/null`; do 
   multilib=`echo $i | sed -e 's/^.*;//' | sed -e 's/\@/ -/g'`
   dirname=`/home/mipsel/x-tools/x86_64-unknown-linux-gnu/bin/gcc -print-multi-os-directory $multilib 2>/dev/null`
   base=/home/mipsel/x-tools/x86_64-unknown-linux-gnu/lib/$dirname
   dbLocation=`/home/mipsel/x-tools/x86_64-unknown-linux-gnu/bin/gcj-dbtool -p $base`
   libdir=$base/gcj
   if ! test -d $libdir; then
      # No shared libraries here.
      continue
   fi
   dirname $dbLocation | xargs mkdir -p
   /home/mipsel/x-tools/x86_64-unknown-linux-gnu/bin/gcj-dbtool -n $dbLocation 64
   find $libdir -follow -name '*.db' -print0 | \
      /home/mipsel/x-tools/x86_64-unknown-linux-gnu/bin/gcj-dbtool -0 -m $dbLocation $dbLocation
done
