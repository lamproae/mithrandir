<refentry id="nss-mymachines" conditional='ENABLE_MACHINED'>

  <refentryinfo>
    <title>nss-mymachines</title>
    <productname>systemd</productname>

    <authorgroup>
      <author>
        <contrib>Developer</contrib>
        <firstname>Lennart</firstname>
